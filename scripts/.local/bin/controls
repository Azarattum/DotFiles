#!/bin/sh

killall dmenu && exit

source ~/.cache/wal/colors.sh

font="firacode nerd font:pixelsize=14"
app=$(echo -e "  File Manager\n  Mixer\n  Bluetooth\n  Screenshot\n  YouTube" | dmenu -fn "$font" -sb "$color8" -i -l 10 | awk '{print $2}')

case $app in

"File Manager")
	st -e $FILES;;

"Mixer")
	st -c tools -e pulsemixer;;

"Bluetooth")
	st -c tools -e bluetoothctl;;

"Screenshot")
	shot;;

"YouTube")
    export YTFZF_EXTMENU="dmenu -fn \"$font\" -sb \"$color8\" -i -l 10"
    ytfzf -t -D;;
esac
