#!/bin/sh

killall dmenu && exit

source ~/.cache/wal/colors.sh

font="firacode nerd font:pixelsize=14"
app=$(echo -e "File Manager\nMixer\nBluetooth\nScreenshot" | dmenu -fn "$font" -sb "$color1" -i -l 10)

case $app in

"File Manager")
	st -e ranger;;

"Mixer")
	st -c tools -e pulsemixer;;

"Bluetooth")
	st -c tools -e bluetoothctl;;

"Screenshot")
	scrot --select --freeze ~/Pictures/Screenshots/%Y.%m.%d_\(%H-%M-%S\).png -e "xclip -selection clipboard -t image/png ~/Pictures/Screenshots/%Y.%m.%d_\\\(%H-%M-%S\\\).png";;

esac
